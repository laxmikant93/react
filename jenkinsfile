pipeline {
    agent { label 'slave1' }
    stages {
        stage('Build') {
            steps {
                script {
                    nodejs(nodeJSInstallationName: 'nodejs') {
                        sh 'echo "hello world" '
                        sh '''
                        cd myapp
                        npm install'''
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    nodejs(nodeJSInstallationName: 'nodejs') {
                        sh '''
                        cd myapp
                        npm test'''
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    nodejs(nodeJSInstallationName: 'nodejs') {
                        sh '''
                        cd myapp
                        npm run build'''
                    }
                    // Copy build files to Apache document root directory on slave1
                    sh '''
                    cd myapp
                    scp -r ./build/* ubuntu@18.234.64.16:/var/www/html
                    ssh ubuntu@18.234.64.16 sudo systemctl restart apache2
                    '''
                }
            }
        }
    }
}
